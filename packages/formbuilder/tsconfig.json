{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "types/**/*",
    "src/bp_confirm_selftransformed.json",
    "../stores/src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test",
    "tests"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "./src/components/*",
      ],
      "@ght/logicbuilder": [
        "../logicbuilder"
      ],
      "@ght/stores": [
        "../stores/src"
      ],
    },
  },
}