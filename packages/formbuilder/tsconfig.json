{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "types/**/*",
    "src/bp_confirm_selftransformed.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "test",
    "tests"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "composite": true,
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo"
  },
  "paths": {
    "@/components/*": [
      "./src/components/*"
    ]
  },
}